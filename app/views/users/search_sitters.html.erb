<div class="container-fluid">
    <h1 class="form-title">Pet Sitters</h1>
    <div class="row">
        <div class="col-xs-12 col-sm-8">
            <%= form_with url: '/sitters', method: :get, local: true do |f| %>
                <%=f.label :search, "Search by City:"%>
                <%=f.text_field :search, id: :search%>
                <%=f.submit "Search", name: nil %>
            <%end%>
        </div>
    </div>
    <hr class="mb-30">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        <%@sitters.each do |sitter|%>
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <section class="profile-image ">
                            <%if sitter.image.attached?%>
                                <%= image_tag sitter.image.variant(resize_to_limit: [100, 100]), style: ("float: right")%>
                            <%else%>
                                <%= image_tag ("default_user_image.png"), size: "100x100", style: ("float: right") %>
                            <%end%>
                        </section>
                        <h5 class="card-title"><%=sitter.name.capitalize%></h5>
                        <p class="card-text"><%=sitter.city.capitalize%>, <%=sitter.state%></p>
                        <a href="/sitters/<%=sitter.id%>" class="btn btn-primary bg-blue">View Profile</a>
                    </div>
                </div>
            </div>
        <%end%>
    </div>
</div>