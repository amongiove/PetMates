<div class="container">
    <div class="col-md-6 mx-auto">
        <h1 class="form-title"><%=@user.name.capitalize%>'s Owner Profile</h1>
        <hr class="mb-30">

        <%= simple_form_for :user, url: user_path(@user), html: { method: "patch" } do |f| %>

            <%= render 'users/user_info', f: f %>   
            
            <%= f.input :home_access_info, as: :text, :placeholder => "Sitters will be able to view this once a job has been scheudled.", input_html: { :rows => 5, class: "form-control", required: true } %>
            <br><%= f.button :submit, class: "btn-primary bg-blue", value: "Update Profile"%><br><br>
        <% end %>
    </div>
</div>
