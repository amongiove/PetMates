<div class="container">
    <div class="col-md-6 mx-auto">
        <h1 class="form-title"><%=@user.name.capitalize%>'s Sitter Profile</h1>

        <%= simple_form_for :user, url: '/signup/sitter' do |f| %>
            <%=f.hidden_field :type, :value=>params["type"] %>

            <%= render "users/user_info" %>
        
            <%= f.input :bio, as: :text %>
            <%= f.input :rate %>
            <br><%= f.button :submit, class: "btn-primary bg-blue", value: "Save Profile" %>
        <% end %>  
    </div>
</div>


    




