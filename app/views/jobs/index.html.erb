<div class="row d-flex justify-content-center mt-50 mb-50">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h1 class="form-title">Your Jobs</h1>
                <hr class="mb-30">
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Sitter Acceptance</th>
                        <th scope="col">Job Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%@jobs.order('date_time DESC').each do |job|%>
                        <tr>
                        <td><%=link_to job.datetime, job_path(job)%></td>
                        <td><%=job.acceptance_status.capitalize%></td>
                        <td><%=job.completed?%></td>
                        </tr>
                        <%end%>
                    </tbody>
                    </table>
            </div>
        </div>
    </div>  
</div>


