<div class="row d-flex justify-content-center mt-50 mb-50">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h1 class="form-title">Job Specifics</h1>
                <h5 class="form-title text-muted"><%=@job.datetime%> | <%=@job.completed?%></h5>
                <h6 class="form-title text-muted">Sitter: <%=@sitter.name.capitalize%> | Owner: <%=@owner.name.capitalize%> </h6>
                <hr class="mb-30">
                <% if @job.accepted? %>
                    <%= render 'jobs/job_info' %>
                <%else%>
                    <%= render 'jobs/job_acceptance' %>
                <%end%>
            </div>
        </div>
    </div>  
</div>