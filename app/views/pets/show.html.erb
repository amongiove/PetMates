<div class="col-md-6 mx-auto">
    <h1 class="form-title"><%=@pet.name.capitalize%>'s Profile</h1>
    
    <%= simple_form_for :pet, url: owner_pet_path(@owner, @pet), html: { method: "delete"} do |f| %>
        <%if @pet.image.attached?%>
            <%= image_tag @pet.image, size: "100x100"%>
        <%else%>
            <%= image_tag ("default_pet_image.jpg"), size: "100x100" %>
        <%end%><br><br>
        
        <fieldset disabled="disabled">
            <%= f.input :name, readonly: true%>

            <%= render 'pets/pet_info', f: f %> <br><br>
        </fieldset>

        <a class="text-white btn bg-blue btn-block shadow-sm" href=<%=edit_owner_pet_path(@owner, @pet)%>>Edit Pet Info</a><br>

        <br><%= f.button :submit, class: "text-white btn bg-blue btn-block shadow-sm", value: "Delete Pet", onclick:"return confirm('Are you sure?')" %></br>
    <%end%>
    
      

</div>