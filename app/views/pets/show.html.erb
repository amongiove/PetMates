<div class="col-md-6 mx-auto">
    <h1 class="form-title"><%=@pet.name.capitalize%>'s Profile</h1>
    <fieldset disabled="disabled">

        <%= simple_form_for :pet, url: owner_pets_path do |f| %>
            <%= f.input :name, readonly: true%>

            <%= render 'pets/pet_info', f: f %> <br><br>
        <%end%>
    </fieldset>
    <a class="text-white btn bg-blue btn-block shadow-sm " href=<%=edit_owner_pet_path(@owner, @pet)%>>Edit Pet Info</a>  
</div>