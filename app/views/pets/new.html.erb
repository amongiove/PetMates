 <div class="col-md-6 mx-auto">
    <h1 class="form-title">New Pet Profile</h1>

    <%= simple_form_for :pet, url: owner_pets_path, html: { method: "post"} do |f| %>
        <%= image_tag ("default_pet_image.jpg"), size: "150x150" %>
        <br><br>
        <p>Upload picture</p> 
        <%= f.file_field :image %><br><br>

        <%= f.input :name, input_html: { class: "form-control", required: true } %>

         <%= render 'pets/pet_info', f: f %> 

        <br><%= f.button :submit, class: "text-white btn bg-blue btn-block shadow-sm", value: "Create Pet" %>

    <%end%>
            
</div>