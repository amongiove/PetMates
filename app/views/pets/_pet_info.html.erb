<%= f.hidden_field :owner_id, :value => @owner.id %>
<%= f.input :pet_type, :placeholder => "eg. Dog, Cat, Bird, etc.", input_html: { class: "form-control", required: true } %>
<%= f.input :breed, input_html: { class: "form-control", required: true } %>
<%= f.input :color, input_html: { class: "form-control", required: true } %><br>
<%= f.input :sex, as: :radio_buttons, collection: [['Male', 'Male'] ,['Female', 'Female']], wrapper: :horizontal_collection, input_html: { class: "radio", required: true } %> 
<%= f.input :age, as: :integer, input_html: { min: '0', class: "form-control", required: true } %>
<%= f.input :care_instructions, as: :text, :placeholder => "Please include: feeding instructions, potty instructions, hiding places, location of toys, location of leash, and anything else you would like your sitter to know.", input_html: { :rows => 5, class: "form-control", required: true } %>
