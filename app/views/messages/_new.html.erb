<%= simple_form_for :message, url: job_messages_path(@job), html: { method: "post"} do |f| %>
    <%= f.hidden_field :user_id, :value => @user.id %>
    <%= f.hidden_field :job_id, :value => @job.id %>
    <%=f.input :content, label: false, as: :text, :placeholder => "Send a new message...", input_html: {class: "form-control", required: true} %>
    <br><%= f.button :submit, class: "text-white btn-sm bg-blue btn-block shadow-sm", value: "Send Message" %>
<%end%>